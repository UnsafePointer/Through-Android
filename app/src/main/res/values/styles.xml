<resources>
    <style name="THRSplashTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="THRMainTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:actionBarStyle">@style/THRActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:editTextBackground">@drawable/edit_text_selector</item>
        <item name="android:actionMenuTextColor">@color/light_through_color</item>
        <item name="android:selectableItemBackground">@drawable/action_button_background</item>
        <item name="android:textColorHighlight">#995856d6</item>
        <item name="android:textSelectHandleLeft">@drawable/through_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/through_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/through_text_select_handle_middle</item>
        <item name="android:actionModeBackground">@drawable/action_bar_background_forms</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Through</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Through</item>
    </style>
    <style name="PopupMenu.Through" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_through</item>
    </style>
    <style name="DropDownListView.Through" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_through</item>
    </style>
    <style name="THRActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/action_bar_background_forms</item>
        <item name="android:titleTextStyle">@style/THRActionBarTitleText</item>
    </style>
    <style name="THRActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dark_through_color</item>
    </style>
    <style name="THRMediaTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/THRTranslucentActionBar</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:progressBarStyleHorizontal">@style/THRProgressBarApp</item>
        <item name="android:selectableItemBackground">@drawable/action_button_background</item>
    </style>
    <style name="THRTranslucentActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:titleTextStyle">@style/THRActionBarTitleText</item>
    </style>
    <style name="THRProgressBarApp" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
    </style>
</resources>
