<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/edtTextUsername"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        float:fletFloatingHint="Email"
        float:fletInputType="textEmailAddress"/>
    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/edtTextPassword"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        float:fletFloatingHint="Password"
        float:fletInputType="textPassword"/>
    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/edtTextPasswordRepeat"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        float:fletFloatingHint="Repeat password"
        float:fletInputType="textPassword"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <info.hoang8f.widget.FButton
            android:text="Privacy Policy"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fbutton:buttonColor="#5856D6"
            fbutton:shadowColor="#3d3c95"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:onClick="privacyPolicy"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"/>
        <info.hoang8f.widget.FButton
            android:text="Terms Of Use"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fbutton:buttonColor="#5856D6"
            fbutton:shadowColor="#3d3c95"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:onClick="termsOfUse"
            android:textSize="14sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <Switch
        android:id="@+id/swtAgreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Yes"
        android:textOff="No"
        android:track="@drawable/switch_track"
        android:thumb="@drawable/switch_inner"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:text="Agreed To Terms"/>
</LinearLayout>